<el-form id='post_form' :model='formRule' accept-charset="UTF-8" :rules='form_rules' action='<%= action_path %>' method='post' label-width="100px" class="demo-ruleForm">
  <el-form-item label=''>
    <el-switch name=post[public] v-model="make_it_public" active-color="#2980b9" inactive-color="#ecf0f1" active-text="Công khai bài viết" ></el-switch>
  </el-form-item>
  <el-form-item label='Tiêu đề' prop='post_title'>
    <el-input id='post-title' @keydown.native.enter.prevent="" name='post[title]' v-model='formRule.post_title' ></el-input>
  </el-form-item>
  <el-post-item>
    <input name="utf8" type="hidden" value="✓" />
    <% if method == 'patch' %>
      <input type="hidden" name="_method" value="patch" />
    <% end %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </el-post-item>
  <el-form-item label='Nội dung'>
    <el-input id='markdown-content' type='textarea'  name='post[body]' v-model='formRule.post_body'></el-input>
  </el-form-item>
  <el-form-item>
    <el-button @click='$("#post_form").submit()' type="danger" id='submit-button' round>Lưu lại</el-button>
  </el-form-item>
</el-form>